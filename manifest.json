{
  "manifest_version": 3,
  "name": "Auto Whisper Bot",
  "version": "1.0",
  "description": "Bot for PoE2 trading that automatically clicks Direct Whisper buttons when they appear",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
